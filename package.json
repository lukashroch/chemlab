{
    "name": "chemlab",
    "version": "1.0.0",
    "description": "Simple chemical inventory management",
    "keywords": [
        "chemlab",
        "chemical inventory"
    ],
    "author": "Lukas Hroch",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lukashroch/chemlab.git"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "lint": "eslint resources/js --ext .js,.ts,.vue --fix",
        "locales": "php artisan vue-i18n:generate && eslint resources/js/i18n/messages.ts --fix",
        "type-check": "vue-tsc --noEmit"
    },
    "simple-git-hooks": {
        "pre-commit": "pnpm lint-staged"
    },
    "lint-staged": {
        "resources/js/*.{js,ts,vue}": "eslint --fix"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.2.0",
        "axios": "^1.1.3",
        "bootstrap": "^4.6.2",
        "date-fns": "^2.29.3",
        "deepmerge": "^4.2.2",
        "fast-copy": "^3.0.0",
        "lodash": "^4.17.21",
        "nanoid": "^4.0.0",
        "object-to-formdata": "^4.4.2",
        "pinia": "^2.0.23",
        "pinia-plugin-persistedstate": "^2.3.0",
        "vue": "^2.7.13",
        "vue-clipboard2": "^0.3.3",
        "vue-i18n": "^8.27.2",
        "vue-js-modal": "^2.0.1",
        "vue-multiselect": "^2.1.6",
        "vue-router": "^3.6.5",
        "vue-scrollto": "^2.20.0",
        "vue-slide-up-down": "^2.0.1",
        "vue-toasted": "^1.1.28",
        "vue2-datepicker": "^3.11.0",
        "vuetable-2": "^2.0.0-beta.4"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.186",
        "@types/node": "^18.11.4",
        "@types/vue2-datepicker": "^3.3.1",
        "@typescript-eslint/eslint-plugin": "^5.40.1",
        "@typescript-eslint/parser": "^5.40.1",
        "@vitejs/plugin-vue2": "^2.0.0",
        "@vue/eslint-config-prettier": "^7.0.0",
        "@vue/eslint-config-typescript": "^11.0.2",
        "eslint": "^8.26.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-simple-import-sort": "^8.0.0",
        "eslint-plugin-vue": "^9.6.0",
        "laravel-vite-plugin": "^0.6.1",
        "lint-staged": "^13.0.3",
        "postcss": "^8.4.18",
        "prettier": "^2.7.1",
        "sass": "~1.32.13",
        "simple-git-hooks": "^2.8.1",
        "typescript": "^4.8.4",
        "vite": "^3.1.8",
        "vue-template-compiler": "^2.7.13",
        "vue-tsc": "^1.0.9"
    }
}
