{
    "name": "chemlab",
    "version": "1.0.0",
    "description": "Simple chemical inventory management",
    "keywords": [
        "chemlab",
        "chemical inventory"
    ],
    "author": "Lukas Hroch",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lukashroch/chemlab.git"
    },
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "lint": "eslint resources/js --ext .js,.ts,.vue --fix",
        "locales": "php artisan vue-i18n:generate && eslint resources/js/i18n/messages.ts --fix",
        "type-check": "vue-tsc --noEmit"
    },
    "simple-git-hooks": {
        "pre-commit": "pnpm lint-staged"
    },
    "lint-staged": {
        "resources/js/*.{js,ts,vue}": "eslint --fix"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.5.1",
        "axios": "^1.6.5",
        "bootstrap": "^4.6.2",
        "date-fns": "^3.3.0",
        "deepmerge": "^4.3.1",
        "fast-copy": "^3.0.1",
        "ketcher-core": "^2.15.1",
        "lodash": "^4.17.21",
        "nanoid": "^5.0.4",
        "object-to-formdata": "^4.5.1",
        "pinia": "^2.1.7",
        "pinia-plugin-persistedstate": "^3.2.1",
        "vue": "^2.7.16",
        "vue-clipboard2": "^0.3.3",
        "vue-i18n": "^8.28.2",
        "vue-js-modal": "^2.0.1",
        "vue-multiselect": "^2.1.8",
        "vue-router": "^3.6.5",
        "vue-scrollto": "^2.20.0",
        "vue-slide-up-down": "^2.0.1",
        "vue-toasted": "^1.1.28",
        "vue2-datepicker": "^3.11.1",
        "vuetable-2": "2.0.0-beta.4"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.202",
        "@types/node": "^20.11.5",
        "@types/vue2-datepicker": "^3.3.6",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "@vitejs/plugin-vue2": "^2.3.1",
        "@vue/eslint-config-prettier": "^9.0.0",
        "@vue/eslint-config-typescript": "^12.0.0",
        "eslint": "^8.56.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-vue": "^9.20.1",
        "laravel-vite-plugin": "^1.0.1",
        "lint-staged": "^15.2.0",
        "postcss": "^8.4.33",
        "prettier": "^3.2.4",
        "sass": "~1.32.13",
        "simple-git-hooks": "^2.9.0",
        "typescript": "^5.3.3",
        "vite": "^5.0.12",
        "vue-template-compiler": "^2.7.16",
        "vue-tsc": "^1.8.27"
    }
}
